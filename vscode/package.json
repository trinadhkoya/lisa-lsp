{
  "name": "lisa-vscode",
  "displayName": "LISA AI Assistant",
  "description": "LISA (Language-Integrated Smart Agent) is a powerful AI companion designed to help you code faster and more efficiently.",
  "version": "1.0.40",
  "publisher": "trinadhkoya",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/trinadhkoya/lisa-lsp.git"
  },
  "license": "ISC",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "AI",
    "Linters"
  ],
  "keywords": [
    "ai",
    "localization",
    "lsp",
    "lisa",
    "intelligent-assistant"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:markdown",
    "onCommand:lisa.execute",
    "onCommand:lisa.setProvider",
    "onCommand:lisa.openAgentManager"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lisa.execute",
        "title": "LISA: Run Agentic Search/Action",
        "category": "LISA"
      },
      {
        "command": "lisa.setProvider",
        "title": "LISA: Set AI Provider Config",
        "category": "LISA"
      },
      {
        "command": "lisa.openAgentManager",
        "title": "LISA: Open Agent Manager",
        "category": "LISA"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LISA Configuration",
      "properties": {
        "lisa.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the LISA language server."
        },
        "lisa.provider": {
          "type": "string",
          "default": "openai",
          "description": "The AI provider to use (openai, claude, gemini, groq)."
        },
        "lisa.model": {
          "type": "string",
          "default": "gpt-4o",
          "description": "The model to use for the selected provider."
        },
        "lisa.apiKey.openai": {
          "type": "string",
          "default": "",
          "description": "API Key for OpenAI."
        },
        "lisa.apiKey.claude": {
          "type": "string",
          "default": "",
          "description": "API Key for Anthropic Claude."
        },
        "lisa.apiKey.gemini": {
          "type": "string",
          "default": "",
          "description": "API Key for Google Gemini."
        },
        "lisa.apiKey.groq": {
          "type": "string",
          "default": "",
          "description": "API Key for Groq."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "mkdir -p server && cp ../dist/server.js server/server.js && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
